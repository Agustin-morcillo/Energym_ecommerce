<!DOCTYPE html>
<html lang="es">
<%- include("../partials/head") %> 
<body>
    <%- include("../partials/header") %> 
   
    <div class="home-banner">
        <div class="banner-container">
            <div class="homepage-welcome-main-container">
                <div class="homepage-welcome-container">
                    <div class="homepage-title-container">
                        <p class="homepage-title">Live the experience</p>
                    </div>
                    
                    <div class="homepage-btn-container">
                        <form action="/products">
                            <button class="homepage-btn">Shop</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="slider">
                <div class="slides">
                    <input type="radio" name="radio-btn" id="radio1" class="banner-btn">
                    <input type="radio" name="radio-btn" id="radio2" class="banner-btn">
                    <input type="radio" name="radio-btn" id="radio3" class="banner-btn">
                    <input type="radio" name="radio-btn" id="radio4" class="banner-btn">
        
                    <div class="slide first">
                        <img src="" alt="" class="slide-img">
                    </div>
                    <div class="slide">
                        <img src="" alt="" class="slide-img">
                    </div>
                    <div class="slide">
                        <img src="" alt="" class="slide-img">
                    </div>
                    <div class="slide">
                        <img src="" alt="" class="slide-img">
                    </div>
    
                    <div class="navigation-auto">
                        <div class="auto-btn1"></div>
                        <div class="auto-btn2"></div>
                        <div class="auto-btn3"></div>
                        <div class="auto-btn4"></div>
                    </div>
                </div>
                <div class="navigation-manual">
                    <label for="radio1" class="manual-btn"></label>
                    <label for="radio2" class="manual-btn"></label>
                    <label for="radio3" class="manual-btn"></label>
                    <label for="radio4" class="manual-btn"></label>
                </div>
            </div>
        </div>
    </div>

    <main>
        <section class="productos">
            <h2 class="section-title">Los productos m치s vendidos</h2>
            <div class="home-products-container">
                <% for(let product of productsHome) { %>
                    <div class="home-product-cart zoom">
                        <img src="images/products/<%=product.image%>"  alt="" class="home-product-img ">
                        <h2 class="home-product-name"><%=product.name%></h2>
                        <p class="home-product-description"><%=product.description%></p>
                        <p class="home-product-price-container">$<span class="home-product-price price-global"><%=product.price%></span></p>
                        <form action="/products/detail/<%=product.id%>" method="GET">
                            <button class="home-product-button">Ver m치s</button>
                        </form>
                    </div>
                <% } %>
            </div>
        </section>
       

        <section class="rutinas">
            <h2 class="section-title">Rutinas m치s populares</h2>
            <div class="rutinas-articles-container">
                <% for(let rutine of rutinasHome) { %>
                    <article class="rutina-articles">
                        <img src="images/rutines/<%= rutine.image %>" alt="" class="rutinas-img">
                        <h2 class="rutine-name"><%= rutine.name %></h2>
                        <p class="rutine-introduction"><%= rutine.introduction %></p>
                        <form action="/rutines/detail/<%= rutine.id %>" class="button-padre">
                            <button type="submit" class="ver-mas-button buttons-style">Ver m치s</button>
                        </form>
                    </article>
                <% } %>
            </div>
        </section>
    </main>

    <%- include("../partials/footer") %> 
    <script src="/javascripts/homepage.js"></script>
    <script src="/javascripts/priceFormat.js"></script>
</body>
</html>